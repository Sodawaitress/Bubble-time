generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        String   @id @default(cuid())
  title     String
  notes     String? 
  location  String?
  color     String?     // hex (from flag palettes)
  type      String?     // label (e.g., Asexual / Trans / Lesbian)
  start     DateTime
  end       DateTime
  rrule     String?
  timezone  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserPrefs {
  id           String  @id @default(cuid())
  slotMinTime  String  @default("07:40:00")
  slotMaxTime  String  @default("22:00:00")
  weekStartsOn Int     @default(1) // Monday
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
